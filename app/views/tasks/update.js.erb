$('div.taskCheck.<%= @task.id %>').children().css("visibility", "visible");
$('div.tasksLinks.<%= @task.id %>').css("pointer-events", "auto");
$("div.taskRow.<%= @task.id %>").replaceWith('<%= j render partial: "tasks/task" , locals: { task: @task } %>');
$('.taskform').val("").attr("placeholder", "Start typing here to create a task...");
$(".flash.<%= @task.project_id %>").html('<%= j render partial: "layouts/flash", locals: { success: flash[:success] } %>');